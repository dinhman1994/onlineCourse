extends ./home

block pageHead
	h1 Trainee

block pageLinks
	ul.nav.nav-pills
		li.nav-item
			a.nav-link(href='/trainee', data-toggle='tab') Courses
		li.nav-item
			a.nav-link.active(href='/trainee/yourCourses', data-toggle='tab') YourCourses
		li.nav-item
			a.nav-link(href='/trainee/profile', data-toggle='tab') Edit Profile
block contentPage
	#yourCourses.active.tab-pane
		each course in courses
			.post
				.user-block
					span.username
						a(href='#') #{course.name}
						a.float-right.btn-tool(href='#')
							i.fas.fa-times
					span.description #{course.timeOfCourse} day left
				// /.user-block
				p #{course.overView}
				p
					form.form-horizontal(action=`/trainee/yourCourses/${course.courseId}` method="get")
						button.m-1
							i.fas.fa-share.mr-1
							| 	ViewCourse
					button.m-1
						i.fas.fa-share.mr-1
						|  Left
				p Number of people enroll
				each category in course.categories
					span.float-right #{category}
				p
				input.form-control.form-control-sm(type='text', placeholder='Type a comment')
		// /.post
		// Post

