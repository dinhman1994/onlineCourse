extends ./home

block pageHead
  h1 #{user.userType}

block pageLinks
  ul.nav.nav-pills
    li.nav-item
      a.nav-link(href='/trainee') Courses
    li.nav-item
      a.nav-link(href='/trainee/yourCourses') YourCourses
    li.nav-item
      a.nav-link(href='/trainee/profile') Edit Profile
    li.nav-item
      a.nav-link.active(href='/trainee/search') Search

block contentPage
  .tasks
    h2 Trainees 
    form.form-horizontal(action=`/trainee/search` method="get")
      .form-group.row
        label.col-sm-2.col-form-label(for='Name') Email or Name of Trainee
        .col-sm-10
          input#Name.form-control(type='text', placeholder='Email or Name of Trainee', name='email')
      .form-group.row
          .offset-sm-2.col-sm-10
            button.btn.btn-danger(type='submit') Search
    each trainee in trainees
      .form-group.row
        span.mr-3 #{trainee.name}
        a.ml-2(href=`/trainee/seeTrainee/${trainee.traineeId}`) 
          button See Profile